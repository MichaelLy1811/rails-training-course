
<div class="container">
  
  <br>
  <h1>Microposts</h1>
  <hr>

  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>Content</th>
        <th>User</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @microposts.each do |micropost| %>
        <tr>
          <td><%= micropost.content %></td>
          <td><%= micropost.user_id %></td>
          <td style="text-align: right"><%= link_to 'Show', micropost, class: "btn btn-primary" %>
          <%= link_to 'Edit', edit_micropost_path(micropost), class: "btn btn-warning" %>
          <%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

